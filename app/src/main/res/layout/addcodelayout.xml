        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:text="Add UID Code"
                android:gravity="center_vertical"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                android:paddingLeft="20dp"
                android:background="@color/drawer_bgcolor" />

            <EditText
                android:id="@+id/comment_text"
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/box"
                android:layout_gravity="center"
                android:hint="Enter UID Number"
                android:paddingLeft="12dp"
                android:layout_marginTop="20dp"
                android:inputType="textCapCharacters"
                android:scrollbars="vertical"
                android:maxLength="10"
                android:maxLines="2" />

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="20dp">

                <Button
                    android:id="@+id/Comment_send"
                    android:layout_height="40dp"
                    android:layout_width="100dp"
                    style="@style/contact_button"
                    android:text="ADD"
                    android:layout_marginRight="@dimen/button_right_padding" />

                <Button
                    android:id="@+id/comment_cancel"
                    android:layout_height="40dp"
                    android:layout_width="100dp"
                    style="@style/contact_button"
                    android:text="CANCEL" />
            </LinearLayout>
        </LinearLayout>

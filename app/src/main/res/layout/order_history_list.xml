<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="beforeDescendants">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="afterDescendants"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="0dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:padding="3dp"
                android:background="@color/org99">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:text="Order Id"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:gravity="center_vertical"
                        android:paddingBottom="3dp"
                        android:textColor="@color/colorPrimary"
                        android:paddingLeft="12dp"
                        android:paddingTop="3dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lblId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:text="aaa"
                        android:paddingLeft="14dp"
                        android:paddingRight="16dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/edittext_textsize_sub" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Product Name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:layout_weight="0.6"
                        android:paddingBottom="3dp"
                        android:paddingLeft="12dp"
                        android:paddingTop="3dp"
                        android:gravity="center_vertical"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lblProductName"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="bbb"
                        android:layout_weight="0.4"
                        android:paddingLeft="14dp"
                        android:paddingRight="16dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/edittext_textsize_sub" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="GP"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:textColor="@color/colorPrimary"
                        android:paddingBottom="3dp"
                        android:paddingLeft="12dp"
                        android:paddingTop="3dp"
                        android:gravity="center_vertical"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lblGp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:paddingLeft="14dp"
                        android:paddingRight="16dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:text="ccc"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/edittext_textsize_sub" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:text="Status"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.6"
                        android:gravity="center_vertical"
                        android:paddingBottom="3dp"
                        android:textColor="@color/colorPrimary"
                        android:paddingLeft="12dp"
                        android:paddingTop="3dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lblOrderHistorystatus"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:paddingLeft="14dp"
                        android:paddingRight="16dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:text="ddd"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/edittext_textsize_sub" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Order Date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:layout_weight="0.6"
                        android:paddingBottom="3dp"
                        android:paddingLeft="12dp"
                        android:paddingTop="3dp"
                        android:gravity="center_vertical"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lblOrderHistoryOrderDate"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:paddingLeft="14dp"
                        android:paddingRight="16dp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:text="eee"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/edittext_textsize_sub" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btnOrderDetails"
                style="@style/contact_button_order_history"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Order\nDetails"
                android:layout_marginTop="0dp"
                android:singleLine="false"
                android:maxLines="2"
                android:layout_weight="1.7"
                android:background="@color/org101" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="left">

            <!-- <Button
                 android:id="@+id/btn_Resendotp"
                 android:text="Resend OTP"
                 style="@style/button_yellow"
                 />-->

            <Button
                android:id="@+id/btn_Resendotp"
                style="@style/contact_button_order_history"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:text="Resend OTP"
                android:layout_marginTop="3dp"
                android:paddingLeft="1dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:background="@color/org101" />


            <!-- <Button
                 android:id="@+id/btn_Submitotp"
                 android:text="Submit OTP"
                 style="@style/button_yellow"
                 />-->

            <Button
                android:id="@+id/btn_Submitotp"
                style="@style/contact_button_order_history"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:text="Submit OTP"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:background="@color/org101" />


            <!--<Button
                android:id="@+id/btnCancelOrder"
                android:text="Cancel Order"
                style="@style/button_pink"
                />-->


            <Button
                android:id="@+id/btnCancelOrder"
                style="@style/contact_button_order_history"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:text="Cancel Order"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:background="@color/org101" />
            <!--  <Button
                  android:id="@+id/btnOrderDetails"
                  android:text="Order Details"
                 style="@style/button_yellow"
                  />-->

            <!-- <Button
                 android:id="@+id/btnOrderDetails"
                 style="@style/contact_button_order_history"
                 android:layout_width="@dimen/button_width_order_history"
                 android:layout_height="@dimen/button_height_order_height"
                 android:text="Order Details"
                 android:layout_marginTop="3dp"
                 android:background="@color/org101"/>-->

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
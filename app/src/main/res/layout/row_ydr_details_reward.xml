<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_16dp"
    android:layout_marginRight="@dimen/margin_16dp"
    android:paddingTop="@dimen/padding_8dp"
    android:paddingBottom="@dimen/padding_24dp">

    <TextView
        android:id="@+id/tvRewardTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size_18sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Reward Code 1" />

    <TextView
        android:id="@+id/tvDivider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:textColor="@color/divider_n_stroke_light_grey"
        app:layout_constraintTop_toBottomOf="@id/tvRewardTitle" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginBottom="@dimen/margin_24dp"
        android:stretchColumns="*"
        app:layout_constraintTop_toBottomOf="@id/tvDivider">
        <!--region Reward Name-->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reward Code"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" : "
                android:textColor="@color/text_black" />

            <TextView
                android:id="@+id/tvRewardCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_14sp"
                android:textStyle="bold"
                tools:text="EV80898" />
        </TableRow>
        <!--endregion-->

        <!--region Order Date-->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reward Value"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" : "
                android:textColor="@color/text_black" />

            <TextView
                android:id="@+id/tvRewardValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_14sp"
                android:textStyle="bold"
                tools:text="200" />
        </TableRow>
        <!--endregion-->

        <!--region Order Id-->
        <TableRow
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reward Key"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" : "
                android:textColor="@color/text_black" />

            <TextView
                android:id="@+id/tvRewardKey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_14sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                tools:text="534534534" />
        </TableRow>
        <!--endregion-->

        <!--region Order Id-->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reward Pin"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" : "
                android:textColor="@color/text_black" />

            <TextView
                android:id="@+id/tvRewardPin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_14sp"
                android:textStyle="bold"
                tools:text="23423" />
        </TableRow>
        <!--endregion-->
        <!--region Expiry Code Date-->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Expiry of the code"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" : "
                android:textColor="@color/text_black" />

            <TextView
                android:id="@+id/tvExpirtyOfTheCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:textSize="@dimen/text_size_14sp"
                android:textStyle="bold"
                tools:text="2020-02-23" />
        </TableRow>
        <!--endregion-->

    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
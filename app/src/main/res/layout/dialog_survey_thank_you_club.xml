<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_8dp"
    android:background="@drawable/unnati_dialog_bg">

    <TextView
        android:id="@+id/tvDialogHeader"
        style="@style/dialog_heading"
        android:background="@drawable/club_dialog_header_bg"
        android:gravity="center"
        android:maxLines="1"
        android:text="Gulf Unnati Survey"
        android:textColor="@color/text_n_icon_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivDialogClose"
        android:layout_width="@dimen/icon_width_48dp"
        android:layout_height="@dimen/icon_height_48dp"
        android:padding="@dimen/padding_16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close_white" />

    <ImageView
        android:id="@+id/ivSuccess"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="@dimen/padding_16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDialogHeader"
        app:srcCompat="@drawable/ic_verified_success" />

    <TextView
        android:id="@+id/tvContentTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_32dp"
        android:layout_marginRight="@dimen/margin_32dp"
        android:gravity="center"
        android:paddingTop="@dimen/padding_16dp"
        android:text="Thank you for sharing your valuable feedback."
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size_16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivSuccess" />

    <TextView
        android:id="@+id/tvDescriptionFirst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="@dimen/padding_16dp"
        android:paddingTop="@dimen/padding_16dp"
        android:paddingRight="@dimen/padding_16dp"
        android:paddingBottom="@dimen/padding_16dp"
        android:textSize="@dimen/text_size_14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvContentTitle" />

    <TextView
        android:id="@+id/tvDescriptionSecond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="@dimen/padding_16dp"
        android:paddingTop="@dimen/padding_8dp"
        android:paddingRight="@dimen/padding_16dp"
        android:text="Please rate us on"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size_16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDescriptionFirst" />

    <TextView
        android:id="@+id/tvPlayStoreLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="@dimen/padding_16dp"
        android:paddingRight="@dimen/padding_16dp"
        android:paddingBottom="@dimen/padding_24dp"
        android:text="Play Store"
        android:textColor="@color/hyperlink"
        android:textSize="@dimen/text_size_16sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDescriptionSecond" />
</androidx.constraintlayout.widget.ConstraintLayout>

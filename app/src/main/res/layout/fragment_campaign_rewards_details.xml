<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/royalty_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="16dp" android:layout_marginRight="16dp" android:layout_above="@+id/footer_view">
        <TextView android:textSize="20dp" android:textStyle="bold" android:textColor="@color/gold_color" android:gravity="center" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:layout_marginTop="5dp" android:layout_marginBottom="10dp" android:text="Your Campaign Reward"/>
        <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="horizontal" android:background="@color/black" android:layout_width="match_parent" android:layout_height="wrap_content">
                <LinearLayout android:orientation="vertical" android:padding="4dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.4">
                    <TextView android:textStyle="bold" android:textColor="@color/gold_color" android:gravity="center_vertical" android:paddingLeft="16dp" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Order Date" android:layout_weight="0.4"/>
                    <TextView android:textStyle="bold" android:textColor="@color/gold_color" android:gravity="center_vertical" android:paddingLeft="16dp" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Order Id:" android:layout_weight="0.4"/>
                    <TextView android:textStyle="bold" android:textColor="@color/gold_color" android:gravity="center_vertical" android:paddingLeft="16dp" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Reward Name" android:layout_weight="0.4"/>
                    <TextView android:textStyle="bold" android:textColor="@color/gold_color" android:gravity="center_vertical" android:paddingLeft="16dp" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="How to Use" android:layout_weight="0.4"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:padding="4dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.6">
                    <TextView android:textSize="14dp" android:textColor="@color/gold_color" android:gravity="center_vertical" android:id="@+id/tv_order_date" android:paddingLeft="16dp" android:paddingTop="4dp" android:paddingRight="16dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Order"/>
                    <TextView android:textSize="14dp" android:textColor="@color/gold_color" android:gravity="center_vertical" android:id="@+id/tv_order_id" android:paddingLeft="16dp" android:paddingTop="4dp" android:paddingRight="16dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                    <TextView android:textSize="14dp" android:textColor="@color/gold_color" android:ellipsize="marquee" android:gravity="center_vertical" android:id="@+id/tv_reward_name" android:paddingLeft="16dp" android:paddingTop="4dp" android:paddingRight="16dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:marqueeRepeatLimit="marquee_forever"/>
                    <TextView android:textSize="14dp" android:textColor="@color/gold_color" android:ellipsize="marquee" android:gravity="center_vertical" android:id="@+id/tv_click_here" android:paddingLeft="16dp" android:paddingTop="4dp" android:paddingRight="16dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/clik_here" android:singleLine="true" android:marqueeRepeatLimit="marquee_forever"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <TextView android:textSize="20dp" android:textStyle="bold" android:textColor="@color/black" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:layout_marginTop="5dp" android:text="Bonus Details"/>
        <ListView android:id="@+id/lst_order_details" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="match_parent" android:listSelector="@android:color/transparent" android:cacheColorHint="@android:color/transparent" android:divider="@color/black" android:dividerHeight="1dp" android:headerDividersEnabled="true" android:footerDividersEnabled="true"/>
    </LinearLayout>
</RelativeLayout>

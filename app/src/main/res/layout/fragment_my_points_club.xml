<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:orientation="vertical" android:background="@drawable/unnati_mandala_art_background" android:paddingLeft="@dimen/padding_16dp" android:paddingRight="@dimen/padding_16dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="?attr/actionBarSize">
        <RelativeLayout android:gravity="center_vertical" android:layout_gravity="center" android:id="@+id/linear_search" android:layout_marginTop="16dp" android:layout_weight="6" style="@style/login_textview_style">
            <TextView android:textSize="@dimen/text_size_16sp" android:textStyle="bold" android:textColor="@color/text_n_icon_white" android:layout_gravity="left" android:id="@+id/tv_retailor_id" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
            <TextView android:textSize="@dimen/text_size_16sp" android:textStyle="bold" android:textColor="@color/text_n_icon_white" android:layout_gravity="left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Select Year: " android:layout_toLeftOf="@+id/rlYear" android:layout_centerVertical="true"/>
            <RelativeLayout android:id="@+id/rlYear" android:layout_width="100dp" android:layout_height="36dp" android:layout_marginTop="@dimen/margin_16dp" android:layout_alignParentRight="true" android:layout_centerVertical="true">
                <androidx.appcompat.widget.AppCompatSpinner android:id="@+id/spnYear" android:background="@drawable/edittext_spinner_bg" android:paddingLeft="@dimen/padding_8dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1"/>
                <ImageView android:padding="8dp" android:layout_width="25dp" android:layout_height="25dp" android:layout_marginRight="@dimen/margin_8dp" android:scaleType="centerInside" android:layout_alignParentRight="true" android:layout_centerVertical="true" app:srcCompat="@drawable/ic_drop_down_grey"/>
            </RelativeLayout>
        </RelativeLayout>
        <TextView android:textSize="15dp" android:textStyle="bold" android:textColor="@color/Red" android:gravity="center_horizontal" android:id="@+id/txt_msgclaimhistory" android:padding="10dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:text="No record is Available...!!!"/>
        <LinearLayout android:orientation="vertical" android:id="@+id/llPoints" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:layout_below="@+id/linear_search">
            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:weightSum="3" android:layout_below="@+id/lin_mech_code_clam">
                <com.google.android.material.card.MaterialCardView android:layout_width="100dp" android:layout_height="100dp" android:layout_weight="1" app:cardCornerRadius="25dp">
                    <LinearLayout android:orientation="vertical" android:padding="@dimen/padding_8dp" android:layout_width="match_parent" android:layout_height="100dp">
                        <ImageView android:layout_gravity="center_horizontal" android:id="@+id/ivPoints" android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/club_point_bg"/>
                        <TextView android:textSize="10dp" android:textColor="@color/text_black" android:gravity="center" android:layout_gravity="center" android:id="@+id/total_earned_points_lbl" android:padding="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_8dp" android:text="Point Earned"/>
                        <TextView android:textSize="15dp" android:textStyle="bold" android:textColor="@color/text_black" android:gravity="center" android:layout_gravity="center" android:id="@+id/total_earned_points" android:padding="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="475585"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView android:layout_width="100dp" android:layout_height="100dp" android:layout_marginLeft="8dp" android:layout_marginRight="8dp" android:layout_weight="1" app:cardCornerRadius="25dp">
                    <LinearLayout android:orientation="vertical" android:padding="@dimen/padding_8dp" android:layout_width="match_parent" android:layout_height="100dp">
                        <ImageView android:layout_gravity="center_horizontal" android:id="@+id/ivRedeem" android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/club_redeem_bg"/>
                        <TextView android:textSize="10dp" android:textColor="@color/text_black" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/total_redeemed_points_lbl" android:padding="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_8dp" android:text="Redeemed"/>
                        <TextView android:textSize="15dp" android:textStyle="bold" android:textColor="@color/text_black" android:gravity="center" android:layout_gravity="center" android:id="@+id/total_redeemed_points" android:padding="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="-12647"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView android:layout_width="100dp" android:layout_height="100dp" android:layout_weight="1" app:cardCornerRadius="25dp">
                    <LinearLayout android:orientation="vertical" android:padding="@dimen/padding_8dp" android:layout_width="match_parent" android:layout_height="100dp">
                        <ImageView android:layout_gravity="center_horizontal" android:id="@+id/ivBalance" android:layout_width="32dp" android:layout_height="32dp" android:src="@drawable/club_balance_bg"/>
                        <TextView android:textSize="10dp" android:textColor="@color/text_black" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/total_balance_lbl" android:padding="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_8dp" android:text="Balance"/>
                        <TextView android:textSize="15dp" android:textStyle="bold" android:textColor="@color/text_black" android:gravity="center" android:layout_gravity="center" android:id="@+id/total_balance" android:padding="2dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="34"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView android:orientation="vertical" android:id="@+id/rvPreviousData" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/llPoints" android:nestedScrollingEnabled="false" app:fastScrollEnabled="false" app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
        <TextView android:textSize="@dimen/text_size_16sp" android:textStyle="bold" android:textColor="@color/text_n_icon_white" android:layout_gravity="left" android:id="@+id/tvTHTitle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_16dp" android:text="UIN: GOO00442" android:layout_below="@+id/rvPreviousData" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
        <androidx.recyclerview.widget.RecyclerView android:orientation="vertical" android:id="@+id/rvTransactionHistory" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/margin_8dp" android:layout_below="@+id/tvTHTitle" android:nestedScrollingEnabled="false" app:fastScrollEnabled="false" app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    </RelativeLayout>
</ScrollView>

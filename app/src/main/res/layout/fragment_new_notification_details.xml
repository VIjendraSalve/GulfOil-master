<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sv_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="?actionBarSize"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/padding_24dp">


    <LinearLayout
        android:id="@+id/llContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_16dp"
        android:background="@drawable/layer_card_background"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_8dp"
        android:paddingTop="@dimen/padding_16dp"
        android:paddingRight="@dimen/padding_8dp"
        android:paddingBottom="@dimen/padding_24dp">

        <TextView
            android:id="@+id/tvDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="right"
            android:textColor="@color/text_n_icon_light_grey"
            android:textSize="@dimen/text_size_10sp"
            tools:text="04 February 2020 11:42 am" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8dp"
            android:maxLines="3"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_14sp"
            tools:text="Congratulation you have achieved your magic no Q1 target" />

        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8dp"
            android:maxLines="10"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_12sp"
            tools:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. " />

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8dp"
            android:layout_marginBottom="@dimen/margin_24dp"
            android:scaleType="fitXY"
            android:visibility="visible"
            tools:src="@mipmap/background" />
    </LinearLayout>
</ScrollView>


<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:orientation="vertical">


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="16dp"
                    android:paddingRight="16dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/csk_logo" />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="GULF KA CALL: BE A CSK FAN OFFER"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="@string/ipl_offfer_text"
                android:textColor="@color/white" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <TableRow
                        android:id="@+id/tr_img_selector"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="25dp"
                        android:background="@drawable/orange_border">

                        <EditText
                            android:id="@+id/edt_ipl_campaign_photo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:background="@color/white"
                            android:clickable="false"
                            android:editable="false"
                            android:focusableInTouchMode="false"
                            android:gravity="center_vertical"
                            android:hint="Upload Photo"

                            android:paddingLeft="5dp"
                            android:paddingTop="10dp"
                            android:paddingRight="5dp"
                            android:paddingBottom="10dp"
                            android:textSize="15dp" />

                        <Button
                            android:id="@+id/btn_ipl_campaign_photo"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@color/darkpic"
                            android:padding="5dp"
                            android:text="CHOOSE FILE"
                            android:textColor="@color/white"
                            android:textSize="12dp" />
                    </TableRow>

                    <TextView
                        android:id="@+id/tv_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginRight="24dp"
                        android:paddingTop="16dp"
                        android:text="- Max size: 300KB, Format: jpeg, png"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <RelativeLayout
                        android:id="@+id/rl_ipl_campaign_img_preview"
                        android:layout_width="300dp"
                        android:layout_height="180dp"
                        android:layout_gravity="center_horizontal"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/iv_ipl_campaign_img_preview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:scaleType="centerCrop"
                            tools:src="@drawable/background_page" />

                        <ImageView
                            android:id="@+id/iv_remove_ipl_campaign_img"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:src="@drawable/ic_close_ipl_campaign_img_golden" />
                    </RelativeLayout>

                    <Button
                        android:id="@+id/btn_submit_ipl_campaign_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/margin_top_button"
                        android:background="@color/darkpic"
                        android:minHeight="0dp"
                        android:paddingLeft="25dp"
                        android:paddingTop="10dp"
                        android:paddingRight="25dp"
                        android:paddingBottom="10dp"
                        android:text="SUBMIT"
                        android:textColor="@color/white" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/tc"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ipl_terms_1"
                        android:textColor="@color/white"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="@string/ipl_terms_2"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:visibility="visible" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="@string/ipl_terms_3"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ipl_terms_4"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:visibility="visible" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ipl_terms_5"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        android:visibility="visible" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/footer_view"
        layout="@layout/common_footer"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom" />
</RelativeLayout>
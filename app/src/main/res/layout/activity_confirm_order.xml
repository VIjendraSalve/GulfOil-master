<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/footer_3"
    android:paddingBottom="@dimen/footer_bottom_padding"
    android:layout_marginTop="30dp">


    <LinearLayout
        android:id="@+id/resident_address_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/rdbtn_mechanic_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Residential Address"
            android:textColor="@color/black"
            android:checked="true"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_my_mechanic_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/black"
            android:layout_marginLeft="15dp"
            android:maxLines="2"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/workshop_address_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:visibility="gone">

        <RadioButton
            android:id="@+id/rdbtn_workshop_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Workshop Address"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_my_workshop_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/black"
            android:layout_marginLeft="15dp"
            android:maxLines="2"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btn_proceed"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:text="Proceed"
            style="@style/button_pink_log" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="40sp"
            android:layout_gravity="center"
            android:text="Cancel"
            style="@style/button_pink_log" />
    </LinearLayout>
</LinearLayout>
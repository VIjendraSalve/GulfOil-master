<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/unnati_mandala_art_background"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="48dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5.0dip"
            android:layout_marginBottom="10dp"
            android:gravity="center"

            android:text="Order Details"
            android:textColor="@color/gold_color"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/royalty_gold_border"
                android:orientation="horizontal"
                android:padding="1dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.4"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:background="@color/gold_color"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:text="Order Id:"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:background="@color/gold_color"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:text="Product Code:"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:background="@color/gold_color"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:text="Product Type"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:background="@color/gold_color"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:text="Order Status:"
                        android:textColor="@color/black"
                        android:textStyle="bold"

                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:background="@color/gold_color"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:text="Order Date:"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:background="@color/gold_color"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:text="Courier Name:"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:background="@color/gold_color"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:text="AWB NO:"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:background="@color/gold_color"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:text="@string/delivery_date_and_time"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.4"
                        android:background="@color/gold_color"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:text="@string/recipient_name"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/txt_detail_normal_order_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:paddingTop="4dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="4dp"
                        android:text="Order"
                        android:textColor="@color/gold_color"
                        android:textSize="14dp"

                        />

                    <TextView
                        android:id="@+id/txt_detail_normal_product_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:paddingTop="4dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="4dp"
                        android:textColor="@color/gold_color"
                        android:textSize="14dp"

                        />

                    <TextView
                        android:id="@+id/txt_detail_normal_product_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:paddingTop="4dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="4dp"
                        android:textColor="@color/gold_color"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/txt_detail_normal_order_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:paddingTop="4dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="4dp"
                        android:textColor="@color/gold_color"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/txt_detail_normal_order_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:paddingTop="4dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="4dp"
                        android:textColor="@color/gold_color"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/txt_detail_normal_courier_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:paddingTop="4dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="4dp"
                        android:textColor="@color/gold_color"
                        android:textSize="14dp"


                        />

                    <TextView
                        android:id="@+id/txt_detail_normal_awb_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:paddingTop="4dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="4dp"
                        android:textColor="@color/gold_color"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/txt_delivery_date_and_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:paddingTop="4dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="4dp"
                        android:textColor="@color/gold_color"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/text_recipient_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="16dp"
                        android:paddingTop="4dp"
                        android:paddingRight="16dp"
                        android:paddingBottom="4dp"
                        android:textColor="@color/gold_color"
                        android:textSize="14dp" />

                </LinearLayout>
            </LinearLayout>

        </ScrollView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:text="Bonus Details"
            android:textColor="@color/gold_color"
            android:textSize="20dp"
            android:textStyle="bold"
            android:visibility="gone" />

        <ListView
            android:id="@+id/lst_order_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@color/gold_color"
            android:dividerHeight="1dp"
            android:footerDividersEnabled="true"
            android:headerDividersEnabled="true"
            android:listSelector="@android:color/transparent"
            android:scrollbars="none"

            />
    </LinearLayout>


</RelativeLayout>
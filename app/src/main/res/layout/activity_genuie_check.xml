<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bgg"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context=".LoginActivity">

    <ScrollView
        android:id="@+id/sc_loginform_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="@dimen/genuine_padding_bottom"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/edittext_left_rigth_padding">

            <TextView
                style="@style/login_textview_style_main"
                android:text="GENUINE VERIFICATION"
                android:textColor="@color/white" />


            <EditText
                android:id="@+id/xedt_genuineCheckuniqueid"
                style="@style/login_edittext_style"
                android:inputType="text"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:hint="@string/Unique_id"
                android:paddingLeft="@dimen/edittext_drawable_padding"
                android:background="@mipmap/unique_id"
                android:maxLength="10"
                android:textColor="@color/black"
                android:textSize="@dimen/edittext_textsize" />

            <!-- <EditText
                 android:id="@+id/xedt_genuineCheckMobNo"
                 style="@style/edittext_style"
                 android:layout_centerInParent="true"
                 android:layout_marginTop="@dimen/margin_top"
                 android:drawableLeft="@mipmap/cell"
                 android:drawablePadding="@dimen/margin_drawable_text"
                 android:hint="Mobile Number"
                 android:inputType="number"
                 android:maxLength="10"
                 android:singleLine="true"
                 android:textColor="@color/black"
                 android:textSize="@dimen/edittext_textsize"
                 android:layout_marginBottom="@dimen/margin_top_button"/>-->


            <EditText
                android:id="@+id/xedt_genuineCheckMobNo"
                style="@style/login_edittext_style"
                android:inputType="number"
                android:layout_marginTop="15dp"
                android:hint="@string/edt_username_hint"
                android:paddingLeft="@dimen/edittext_drawable_padding"
                android:background="@drawable/login_box"
                android:maxLength="10"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:layout_marginBottom="30dp"
                android:textSize="@dimen/edittext_textsize" />


            <Button
                android:id="@+id/xbtn_genuineChecksubmit"
                style="@style/contact_button"
                android:layout_width="130.0dip"
                android:layout_height="50.0dip"
                android:layout_gravity="center"
                android:text="@string/otp_submit" />
            <!--

                        <Button
                            android:id="@+id/xbtn_genuineChecksubmit"
                            style="@style/button_pink_log"

                            android:layout_gravity="center"
                            android:text="@string/otp_submit" />
            -->

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
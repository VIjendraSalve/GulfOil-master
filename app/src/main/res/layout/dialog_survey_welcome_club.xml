<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_8dp"
    android:background="@drawable/unnati_dialog_bg">

    <TextView
        android:id="@+id/tvDialogHeader"
        style="@style/dialog_heading"
        android:background="@drawable/club_dialog_header_bg"
        android:gravity="center"
        android:maxLines="1"
        android:text="Gulf Unnati Survey"
        android:textColor="@color/text_n_icon_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivDialogClose"
        android:layout_width="@dimen/icon_width_48dp"
        android:layout_height="@dimen/icon_height_48dp"
        android:padding="@dimen/padding_16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close_white" />

    <TextView
        android:id="@+id/tvContentTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_32dp"
        android:layout_marginRight="@dimen/margin_32dp"
        android:gravity="center"
        android:paddingTop="@dimen/padding_32dp"
        android:text="Unnati App Survey"
        android:textColor="@color/text_black"
        android:textSize="@dimen/text_size_24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDialogHeader" />

    <TextView
        android:id="@+id/tvDescriptionFirst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="@dimen/padding_16dp"
        android:paddingTop="@dimen/padding_16dp"
        android:paddingRight="@dimen/padding_16dp"
        android:paddingBottom="@dimen/padding_16dp"
        android:text="We&apos;ld Love your feedback!"
        android:textColor="#4a4a4a"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvContentTitle" />

    <TextView
        android:id="@+id/tvDescriptionSecond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="@dimen/padding_16dp"
        android:paddingTop="@dimen/padding_16dp"
        android:paddingRight="@dimen/padding_16dp"
        android:paddingBottom="@dimen/padding_8dp"
        android:textColor="@color/text_black"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDescriptionFirst" />

    <LinearLayout
        android:id="@+id/llFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="@dimen/padding_8dp"
        android:paddingBottom="@dimen/padding_24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDescriptionSecond">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnOk"
            style="@style/club_dialog_teal_button"
            android:layout_width="wrap_content"
            android:clickable="true"
            android:text="Take the survey now !" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

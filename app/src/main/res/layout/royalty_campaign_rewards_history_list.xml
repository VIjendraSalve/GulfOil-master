<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:descendantFocusability="beforeDescendants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout android:orientation="vertical" android:paddingTop="5dp" android:paddingBottom="5dp" android:descendantFocusability="afterDescendants" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="2">
        <LinearLayout android:orientation="horizontal" android:background="@drawable/royalty_gold_border" android:padding="0dp" android:layout_width="match_parent" android:layout_height="wrap_content">
            <LinearLayout android:orientation="horizontal" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginTop="5dp" android:layout_marginBottom="5dp" android:layout_weight="5">
                <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                    <TextView android:textSize="15dp" android:textStyle="bold" android:textColor="@color/gold_color" android:gravity="center_vertical" android:paddingLeft="8dp" android:paddingTop="3dp" android:paddingRight="10dp" android:paddingBottom="3dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Campaign Name" android:maxLines="1" android:layout_weight="1"/>
                    <TextView android:textSize="15dp" android:textStyle="bold" android:textColor="@color/gold_color" android:gravity="center_vertical" android:paddingLeft="8dp" android:paddingTop="3dp" android:paddingRight="16dp" android:paddingBottom="3dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Order Date" android:maxLines="1"/>
                    <TextView android:textSize="15dp" android:textStyle="bold" android:textColor="@color/gold_color" android:gravity="center_vertical" android:paddingLeft="8dp" android:paddingTop="3dp" android:paddingRight="16dp" android:paddingBottom="3dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Order Id"/>
                    <TextView android:textSize="15dp" android:textStyle="bold" android:textColor="@color/gold_color" android:ellipsize="end" android:gravity="top" android:paddingLeft="8dp" android:paddingTop="3dp" android:paddingRight="16dp" android:paddingBottom="3dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Reward Name" android:maxLines="2" android:minLines="2"/>
                    <TextView android:textSize="15dp" android:textStyle="bold" android:textColor="@color/gold_color" android:gravity="center_vertical" android:paddingLeft="8dp" android:paddingTop="3dp" android:paddingRight="16dp" android:paddingBottom="3dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Quantity"/>
                </LinearLayout>
                <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
                    <TextView android:textSize="14dp" android:textColor="@color/gold_color" android:id="@+id/tv_campaign_name" android:paddingLeft="14dp" android:paddingTop="3dp" android:paddingRight="16dp" android:paddingBottom="3dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="2017-04-07" android:maxLines="1"/>
                    <TextView android:textSize="14dp" android:textColor="@color/gold_color" android:id="@+id/tv_order_date" android:paddingLeft="14dp" android:paddingTop="3dp" android:paddingRight="16dp" android:paddingBottom="3dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="2017-04-07" android:maxLines="1"/>
                    <TextView android:textSize="14dp" android:textColor="@color/gold_color" android:id="@+id/tv_order_id" android:paddingLeft="14dp" android:paddingTop="3dp" android:paddingRight="16dp" android:paddingBottom="3dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="123456"/>
                    <TextView android:textSize="14dp" android:textColor="@color/gold_color" android:ellipsize="end" android:id="@+id/tv_reward_name" android:paddingLeft="14dp" android:paddingTop="3dp" android:paddingRight="16dp" android:paddingBottom="3dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Amazon" android:maxLines="2" android:minLines="2"/>
                    <TextView android:textSize="14dp" android:textColor="@color/gold_color" android:id="@+id/tv_order_quantity" android:paddingLeft="14dp" android:paddingTop="3dp" android:paddingRight="16dp" android:paddingBottom="3dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="02"/>
                </LinearLayout>
            </LinearLayout>
            <Button android:textColor="@color/black" android:id="@+id/btn_view_codes" android:background="@drawable/gold_btn_bg" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginTop="0dp" android:text="View\10Codes" android:maxLines="2" android:singleLine="false" android:layout_weight="1.5" style="@style/contact_button_order_history"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

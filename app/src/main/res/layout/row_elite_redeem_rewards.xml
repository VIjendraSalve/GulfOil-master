<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/ivRedeemRewardsImage"
        android:layout_width="86dp"
        android:layout_height="56dp"
        android:background="@drawable/image_corner_radius_bg"
        android:scaleType="centerCrop"
        android:src="@drawable/royal_mandala_art_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvRedeemRewardsTitle"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:maxLines="2"
        android:text="Amazon Cash Voucher GuflKfjd d dfd"
        android:textColor="@color/text_black"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivRedeemRewardsImage" />

    <TextView
        android:id="@+id/tvRedeemRewardsPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Point: 200"
        android:textColor="@color/text_black"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvRedeemRewardsTitle" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnRedeem"
        style="@style/elite_dialog_purple_button"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginTop="8dp"
        android:text="Redeem"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvRedeemRewardsPoints" />
</androidx.constraintlayout.widget.ConstraintLayout>
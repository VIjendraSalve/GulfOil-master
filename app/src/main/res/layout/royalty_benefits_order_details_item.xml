<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp">
    <TextView android:textStyle="bold" android:textColor="@color/gold_color" android:gravity="center" android:id="@+id/tv_sr_no" android:background="@drawable/royalty_gold_border_with_black_bg" android:paddingLeft="16dp" android:paddingTop="6dp" android:paddingBottom="6dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="2dp" android:layout_marginRight="2dp" android:text="Reward Code"/>
    <LinearLayout android:orientation="horizontal" android:background="@color/black" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:orientation="vertical" android:padding="4dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.4">
            <TextView android:textStyle="bold" android:textColor="@color/gold_color" android:gravity="center_vertical" android:paddingLeft="16dp" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Reward Code" android:layout_weight="0.4"/>
            <TextView android:textStyle="bold" android:textColor="@color/gold_color" android:gravity="center_vertical" android:paddingLeft="16dp" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Reward Value" android:layout_weight="0.4"/>
            <TextView android:textStyle="bold" android:textColor="@color/gold_color" android:gravity="center_vertical" android:paddingLeft="16dp" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="E Voucher Code" android:layout_weight="0.4"/>
            <TextView android:textStyle="bold" android:textColor="@color/gold_color" android:gravity="center_vertical" android:id="@+id/lbl_evoucher_pin" android:paddingLeft="16dp" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Evoucher Pin" android:layout_weight="0.4"/>
            <TextView android:textStyle="bold" android:textColor="@color/gold_color" android:gravity="center_vertical" android:paddingLeft="16dp" android:paddingTop="4dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Expiry of the code" android:layout_weight="0.4"/>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:padding="4dp" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.6">
            <TextView android:textSize="14dp" android:textColor="@color/gold_color" android:gravity="center_vertical" android:id="@+id/tv_reward_code" android:paddingLeft="16dp" android:paddingTop="4dp" android:paddingRight="16dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Order"/>
            <TextView android:textSize="14dp" android:textColor="@color/gold_color" android:gravity="center_vertical" android:id="@+id/tv_reward_value" android:paddingLeft="16dp" android:paddingTop="4dp" android:paddingRight="16dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <TextView android:textSize="14dp" android:textColor="@color/gold_color" android:ellipsize="marquee" android:gravity="center_vertical" android:id="@+id/tv_voucher_code" android:paddingLeft="16dp" android:paddingTop="4dp" android:paddingRight="16dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:marqueeRepeatLimit="marquee_forever"/>
            <TextView android:textSize="14dp" android:textColor="@color/gold_color" android:ellipsize="marquee" android:gravity="center_vertical" android:id="@+id/tv_voucher_pin" android:paddingLeft="16dp" android:paddingTop="4dp" android:paddingRight="16dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:marqueeRepeatLimit="marquee_forever"/>
            <TextView android:textSize="14dp" android:textColor="@color/gold_color" android:ellipsize="marquee" android:gravity="center_vertical" android:id="@+id/tv_expiry_date" android:paddingLeft="16dp" android:paddingTop="4dp" android:paddingRight="16dp" android:paddingBottom="4dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:singleLine="true" android:marqueeRepeatLimit="marquee_forever"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/footer_3"
    android:paddingBottom="@dimen/footer_bottom_padding"
    android:orientation="vertical"
    tools:context="com.taraba.gulfoilapp.ContactUsActivity">

    <!-- <LinearLayout
         android:id="@+id/lin_tool_bar_conatiner"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:visibility="gone">
         <include
             android:id="@+id/tool_bar"
             layout="@layout/tool_bar"
             ></include>
     </LinearLayout>-->
    <TextView
        android:id="@+id/txt_contact_us_text"
        style="@style/login_textview_style"
        android:gravity="center"
        android:text="@string/btn_contactus"
        android:layout_marginTop="8dp"
        android:textColor="@color/Red" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/contact_us_doc"
                style="@style/login_textview_style_main"
                android:gravity="left"
                android:textAlignment="gravity"
                android:textSize="@dimen/text_size_btn"
                android:textColor="@color/black" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bText"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:layout_marginTop="5dp"></LinearLayout>

</LinearLayout>